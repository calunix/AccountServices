@model AccountServices.Models.PasswordReset

@{
    ViewData["Title"] = "Password Reset";
}

<h1>Password Reset</h1>


<div class="row">
    <div class="col-md-4">
        <div>
            Submit your email address and domain username below. We'll send you a verification code to reset your password.
        </div>
        <form asp-action="Index" onsubmit="SubmitButton.disabled = true; return true;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserEmailAddress" class="control-label"></label>
                <input asp-for="UserEmailAddress" class="form-control" />
                <span asp-validation-for="UserEmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Get Verification Code" class="btn btn-primary" name="SubmitButton"/>
            </div>
        </form>
    </div>
</div>